{
    "compilerOptions": {
      "composite": true, // 表明这是一个可以被其他项目引用的复合项目
      "skipLibCheck": true, // 跳过库检查
      "module": "ESNext", // 使用 ES Modules
      "moduleResolution": "bundler", // 模块解析策略
      "allowSyntheticDefaultImports": true // 同上
    },
    "include": ["vite.config.ts"] // 指定此配置应用于哪些文件
  }